{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [ 
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "FinanceManagerAPI"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "SQLServer": "Data Source=THUNDERLIGHT;Initial Catalog=FinanceManagerAPI_DB;Integrated Security=True;TrustServerCertificate=true;"
  }
}
